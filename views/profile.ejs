<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-gray-100 text-gray-800">
  <!-- Navbar -->
  <div class="nav sticky top-0 flex justify-between items-center px-5 py-3 bg-white shadow-sm z-10">
    <h3 class="text-lg font-bold tracking-wide text-gray-700"><%= user.username %></h3>
    <div class="icons flex gap-5 text-[1.4rem] text-gray-500">
      <a href="/upload" class="hover:text-blue-500 transition"><i class="ri-add-box-line"></i></a>
      <i class="ri-menu-line cursor-pointer hover:text-blue-500 transition"></i>
    </div>
  </div>

  <!-- Profile Card -->
  <div class="max-w-4xl mx-auto mt-10">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <!-- Profile Header -->
      <div class="relative">
        <div class="h-40 bg-gradient-to-r from-blue-500 to-sky-400"></div>
        <div class="absolute top-20 left-1/2 transform -translate-x-1/2">
          <div class="w-28 h-28 rounded-full overflow-hidden border-4 border-white shadow-md">
            <img src="/images/uploads/<%= user.picture %>" alt="Profile Picture" class="w-full h-full object-cover">
          </div>
        </div>
      </div>
      <div class="p-6 text-center">
        <h3 class="text-2xl font-semibold"><%= user.name %></h3>
        <p class="text-gray-500 text-sm mt-2"><%= user.bio || "You have not set anything yet. (Click edit profile to set)" %></p>
        <div class="mt-4 flex justify-center gap-5">
          <div class="flex flex-col items-center">
            <h4 class="text-xl font-bold text-blue-500"><%= user.posts.length %></h4>
            <p class="text-xs text-gray-500">Posts</p>
          </div>
          <div class="flex flex-col items-center">
            <h4 class="text-xl font-bold text-blue-500"><%= user.followers.length %></h4>
            <p class="text-xs text-gray-500">Followers</p>
          </div>
          <div class="flex flex-col items-center">
            <h4 class="text-xl font-bold text-blue-500"><%= user.following.length %></h4>
            <p class="text-xs text-gray-500">Following</p>
          </div>
        </div>
        <div class="mt-6">
          <a href="/edit" class="px-5 py-2 bg-blue-500 text-white text-sm rounded-full hover:bg-blue-600 transition">Edit Profile</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Posts Section -->
  <div class="max-w-5xl mx-auto mt-10 px-4">
    <h2 class="text-lg font-semibold text-gray-700 mb-4">Posts</h2>
    <% if (user.posts.length > 0) { %>
      <div class="grid mb-[10vh] md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% user.posts.reverse().forEach(function(post) { %>
          <div class="relative overflow-hidden rounded-lg shadow-md bg-white group">
            <img class="w-full h-64 object-cover transition-transform group-hover:scale-110" src="/images/uploads/<%= post.picture %>" alt="Post Image">
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-50 transition-opacity flex items-center justify-center">
              <i class="ri-heart-fill text-red-500 text-xl opacity-0 group-hover:opacity-100 transition-opacity"></i>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="text-center text-gray-500 mt-20">
        <p class="text-sm">No posts yet. Share your first post!</p>
      </div>
    <% } %>
  </div>
</div>
<% include ./partials/footer.ejs %>
