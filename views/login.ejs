<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-gradient-to-br from-zinc-900 via-zinc-800 to-zinc-900 flex items-center justify-center">
  <!-- Login Card -->
  <div class="relative flex flex-col items-center gap-8 px-8 py-12 bg-opacity-75 bg-zinc-800 backdrop-blur-md rounded-2xl shadow-xl w-full max-w-md">
    <!-- Neon Glow Circle Decoration -->
    <div class="absolute -top-10 -right-10 w-24 h-24 rounded-full bg-blue-500 blur-lg opacity-40 animate-pulse"></div>
    <div class="absolute -bottom-10 -left-10 w-32 h-32 rounded-full bg-pink-500 blur-lg opacity-40 animate-pulse"></div>

    <!-- Logo -->
    <img class="w-28 h-auto drop-shadow-xl hover:scale-110 transition-all duration-300" src="/images/logo.png" alt="Logo">

    <!-- Login Form -->
    <form class="w-full" action="/login" method="post">
      <!-- Username Input -->
      <div class="relative">
        <input 
          class="px-4 py-3 w-full bg-zinc-900 text-sm text-gray-300 placeholder-gray-500 border border-zinc-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-zinc-800 transition-all"
          type="text" 
          placeholder="Username" 
          name="username"
          required>
        <i class="ri-user-line absolute top-3.5 right-4 text-gray-500 group-focus:text-blue-500"></i>
      </div>
      
      <!-- Password Input -->
      <div class="relative mt-4">
        <input 
          class="px-4 py-3 w-full bg-zinc-900 text-sm text-gray-300 placeholder-gray-500 border border-zinc-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 focus:ring-offset-2 focus:ring-offset-zinc-800 transition-all"
          type="password" 
          placeholder="Password" 
          name="password"
          required>
        <i class="ri-lock-line absolute top-3.5 right-4 text-gray-500 group-focus:text-pink-500"></i>
      </div>

      <!-- Submit Button -->
      <button 
        class="w-full bg-gradient-to-r from-blue-500 to-pink-500 text-white text-sm font-medium px-4 py-3 rounded-lg mt-6 hover:scale-105 hover:shadow-xl hover:transition-all transform ease-in-out duration-300">
        Log In
      </button>
    </form>

    <!-- Sign-Up Link -->
    <p class="text-sm text-gray-400 mt-4">
      Don't have an account? 
      <a href="/" class="text-blue-400 hover:text-pink-400 hover:underline transition-all duration-200">Sign Up</a>
    </p>
  </div>
</div>

<!-- Footer -->
<% include ./partials/footer.ejs %>
